<script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<link rel="icon" type="image/png" href="<%= bot.user.displayAvatarURL({size: 128}) %>">
<title><%= bot.user.username %></title>

<nav class="navbar navbar-expand-lg justify-content-center navbar-dark" style="background-color: #5663f7;">
    <div class="container">
        <a class="navbar-brand" href="/" style="text-decoration: none;color:white">
            <img src="<%= bot.user.displayAvatarURL({size: 4096}) %>" alt="Logo" 
            class="d-inline-block align-top"
            >
        </a> <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a href="https://discord.com/api/oauth2/authorize?client_id=<%= bot.user.id %>&permissions=8&scope=bot%20applications.commands" target="_blank">
                    <b>Invite</b>
                </a>
            </li>
            <li class="nav-item">
                <a href="https://discord.gg/HcgTkh37d3" target="_blank">Support</a>
            </li>
            <li class="nav-item">
                <a href="/dashboard"><b>Dashboard</b></a>
            </li>
        </ul>
        <ul class="nav navbar-right">
            <li class="nav-item" >
                <% if(user && user.id) { %>
                    <button class="btn btn-danger btn-sm" 
                    style="letter-spacing: 0.1em;font-weight: 750;width: 100%;"
                    onclick="location.href='/logout'" type="button"><img src="https://cdn.discordapp.com/avatars/<%=user.id%>/<%=user.avatar%>.png", style="width: 50px;margin-bottom:3%;"alt="LOGO"> LOGOUT!</button>
                <% }else { %>
                    <button class="btn btn-success btn-sm" 
                    style="letter-spacing: 0.1em;font-weight: 750;width: 100%;"
                    onclick="location.href='/login'" type="button"><span class="iconify" data-icon="simple-icons:discord"></span> Login</button>
                <% }%>
            </li>
        </ul>
    </div>
</nav>
